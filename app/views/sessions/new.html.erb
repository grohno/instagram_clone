<article class="sign_form col-sm-12 col-md-6 col-md-offset-3">
  <h1 class="text-center insta_f2">Log in</h1>
  <%= form_with(scope: :session, url: sessions_path, local: true) do |f| %>
    <p><%= f.label :email, "メールアドレス" %>
    <%= f.email_field :email %></p>
    <p><%= f.label :password, "パスワード" %>
    <%= f.password_field :password %></p>
    <p class="text-center"><%= f.submit "ログインする", class: "submit btn btn-primary btn-lg" %></p>
  <% end %>
</article>
