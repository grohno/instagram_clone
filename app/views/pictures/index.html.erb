<p id="notice"><%= notice %></p>

<h1>Pictures</h1>

<ul class="picture_list">
<% @pictures.each do |picture| %>
  <li>
    <p><span>User: <%= picture.user.name %></span></p>
    <p><span>Title:</span><%= picture.title %></p>
    <p class="content"><span>Content:</span><%= picture.content %></p>
    <p><%= image_tag picture.image.url %></p>
    <p class="btn_block">
      <%= link_to 'Show', picture, class: 'btn btn-primary' %>
      <% if picture.user_id == current_user.id %>
        <%= link_to 'Edit', edit_picture_path(picture.id), data: { confirm: '本当に編集していいですか？' }, class: 'btn btn-primary' %>
        <%= link_to 'Destroy', picture_path(picture.id), method: :delete, data: { confirm: '本当に削除していいですか？' }, class: 'btn btn-primary' %>
      <% end %>
    </p>
  </li>
<% end %>
</ul>

<br>

